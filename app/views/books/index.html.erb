<!--一覧表示-->
<h1>Books</h1>
<table>
 <head>
  <tr>
   <th>Title</th>
   <th>Body</th>
  </tr>
 </head>
 <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
     <a><%= link_to "Show" , book_path(book.id) %></a>
     <a><%= link_to "Edit" , edit_book_path(book.id) %></a>
     <a><%= link_to "Destroy" , book_path(book.id), method: :delete, "date-confirm" => "本当に削除しますか？" %></a>
    </td>
   </tr>
  <% end %>
 </tbody>
</table>


<!--新規投稿-->
<% if @new_book.errors.any? %>
 <%= @new_book.errors.count %> errors prohibited this book from being saved:
 <ul>
  <% @new_book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<h2>New book</h2>
<%= form_with model: @new_book do |f| %>
 <h4>タイトル</h4>
 <%= f.text_field :title %>

 <h4>本文</h4>
 <%= f.text_area :body %>

 <%= f.submit '投稿' %>

 <% end %>